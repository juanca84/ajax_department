= simple_form_for @register do |f|
  - if @register.errors.any?
    #error_explanation
      %h2= "#{pluralize(@register.errors.count, "error")} prohibited this register from being saved:"
      %ul
        - @register.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name

  .field
    = field_set_tag 'Tierra' do
      = render 'land', f: f

    

  .actions
    = f.submit 'Save'



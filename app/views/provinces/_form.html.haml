- index = 1
= simple_form_for @province do |f|
  - if @province.errors.any?
    #error_explanation
      %h2= "#{pluralize(@province.errors.count, "error")} prohibited this province from being saved:"
      %ul
        - @province.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :department
    = f.input_field :department_id, as: :select, collection: Department.all, class: 'select optional form-control department_lands department', id: "department_lands_#{ index }"
  .actions
    = f.submit 'Save'

  - index +=1
